  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

gem 'jquery-rails'

group :development do
  gem 'rspec-rails'
end

group :test do
  gem 'rspec-rails'
  gem 'mongoid-rspec', :require => false
  gem "ZenTest"
  gem "autotest-rails"
  gem 'factory_girl'  
  gem 'autotest-fsevent'
